
<Ziffernknopf@Button>:
	on_press: app.button_pressed(self)
	background_color: (0,1,1,1)

<Operationsknopf@Button>:
	on_press: app.button_pressed(self)
	background_color: (0,0,1,1)


BoxLayout:
	orientation: "vertical"
	Label:
		id: outputLabel
		text: "Hallo"
	GridLayout:
		cols: 2
		Ziffernknopf:
			text: "1"
		Button: 
			text: "2"
		Ziffernknopf:
			text: "7"
		Ziffernknopf: 
			text: "9"

	BoxLayout:
		Operationsknopf:
			text: "+"
		Button:
			text: "-"
		Button:
			text: "Reset"
			on_release: app.reset()
		Button:
			text: "Berechne!"
			on_release: app.berechne2()
