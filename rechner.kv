#:import WipeTransition kivy.uix.screenmanager.WipeTransition

<Label>:
	color: (1,0,0,1)
	font_size: 30

<Button>:
	color: (1,1,0,1)

<Ziffernknopf@Button>:
	on_press: app.button_pressed(self)
	background_color: (0,1,1,1)

<Operationsknopf@Button>:
	on_press: app.button_pressed(self)
	background_color: (0,0,1,1)

ScreenManager:
	transition: WipeTransition()
	
	Screen:
		name: 'calc'
		BoxLayout:
			orientation: "vertical"
			Label:
				id: outputLabel
				text: "Hallo"
			GridLayout:
				size_hint_y: 3
				cols: 3
				Ziffernknopf:
					text: "1"
				Button: 
					text: "2"
				Ziffernknopf:
					text: "3"
				Ziffernknopf:
					text: "4"
				Ziffernknopf:
					text: "5"
				Ziffernknopf:
					text: "6"

				Ziffernknopf:
					text: "7"
				Ziffernknopf: 
					text: "9"

			BoxLayout:
				Operationsknopf:
					text: "+"
				Button:
					text: "-"
				Button:
					text: "Reset"
					on_release: app.reset()
				Button:
					text: "Berechne!"
					on_release: app.berechne2()
				Button:
					text: 'Grafik'
					on_press: root.current =  'graph'

	Screen:
		name: 'graph'
		BoxLayout:
			
			orientation: "vertical"
			BoxLayout:
				size_hint_y: 4
				id: graph
			BoxLayout:
				Button:
					text: 'Sinus'
					on_press: app.gengraph(self,1)
				Button:
					text: 'Linear'
					on_press: app.gengraph(self,2)
				Button:
					text: 'Kalkulator'
					on_press: root.current =  'calc'


